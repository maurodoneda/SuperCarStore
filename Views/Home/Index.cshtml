@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid text-center welcomeText">
    <p class="overlayText">Super Car Experience</p>
    <p>Super Car <span> Experience</span></p>
    <div class="underLine"></div>
</div>




<form class="container form-inline booking pr-0" name="booking">

    <div class="formSelect">
        <label><span>Store:</span></label>
        <select name="store">
            <option value="1">London</option>
            <option value="2">Silverston</option>
            <option value="3">Milan</option>
            <option value="4">Las Vegas</option>
        </select>
    </div>

    <div class="mr-2 pt-2">
        <label for="checkin"><span>Pick up:</span></label>
        <input type="datetime-local" value="" id="checkin">
    </div>

    <div class="mr-2 pt-2">
        <label for="return"><span>Return:</span></label>
        <input type="datetime-local" class="dateselect" id="return">
    </div>

        <button class="btn btn-secondary checkBtn" id="search">
            Check
        </button>

</form>

